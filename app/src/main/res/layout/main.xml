<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.4"
        android:src="@drawable/library"/>
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp">
            <Space
                android:id="@+id/firstSpace"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/subLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/courseNumBox"
                    android:hint="Enter no of courses"
                    style="@style/EditText.wide"
                    android:layout_marginBottom="8dp"
                    android:imeOptions="actionDone"/>
                <Button
                    android:id="@+id/goBtn"
                    android:text="Go"
                    style="@style/Button"/>
            </LinearLayout>
            <com.google.android.ads.nativetemplates.TemplateView
                android:id="@+id/topNativeTemplateView"
                app:gnt_template_type="@layout/gnt_small_template_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TableLayout
                android:id="@+id/txtBoxContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:visibility="gone">
                <TableRow
                    android:id="@+id/fisrtRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/courseNumBox2"
                        android:text="Course"
                        style="@style/EditText.bold.big"
                        android:minWidth="100dp"/>
                    <TextView
                        android:id="@+id/unitBox"
                        android:text="Unit"
                        style="@style/EditText.bold.big"/>
                    <TextView
                        android:id="@+id/scoreBox"
                        android:text="Score"
                        style="@style/EditText.bold.big"/>
                </TableRow>
            </TableLayout>
            <Button
                android:id="@+id/calcBtn"
                android:text="Calculate"
                style="@style/Button"
                android:layout_marginTop="15dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/cgpTxtBox"
                style="@style/TextView.small"
                android:visibility="gone"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_weight="1"/>
            <com.google.android.ads.nativetemplates.TemplateView
                android:visibility="gone"
                android:id="@+id/bottomNativeTemplateView"
                app:gnt_template_type="@layout/gnt_medium_template_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/hiddenTxtVw"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="number"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/clearBtn"
        style="@style/FloatButton"
        android:layout_alignParentRight="true"/>
</RelativeLayout>